            // Here is where you pass arguments to main.py:
            "args": [
                "--labels-json", "/home/david/DMC_app/resources/barcode-labels.json",
                "--hef-path",    "/home/david/DMC_app/resources/yolov11_model_DMC_c.hef",
                "--input",       "rpi",
                "--use-frame"
            ]
        }
    ]
